<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  
  <% if @book.errors.any? %>
      <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:<br></h2>
    <% @book.errors.full_messages.each do |message| %>
      <li class="errors2"><%= message %><br></li>
    <% end %>
  <% end %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <p></p>
  <%= f.submit'Update Book' %>
  
<% end %>

<div class="link">
  <span><%= link_to "Show",book_path(@book.id) %></span>
    |
    <span><%= link_to "Back","/books" %></span>
</div>