<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<h2>Books</h2>
<table>
    <thead>
        <tr class="title">
            <th>Title</th>
            <th>Body</th>
            <th colspan ="3"> </th>
        </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
        <tr class="title2">
            <td><span><%= book.title %></span></td>
            <td><span><%= book.body %></span></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete,"data-confirm" => "Are you sure?" %></td>
        </tr>
    </tbody>
    <% end %>
</table>


<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
    <% if @book.errors.any? %>
          <h2 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:<br></h2>
      <% @book.errors.full_messages.each do |message| %>
          <li class="error2"><%= message %><br/></li>
      <% end %>
    <% end %>
    <div class="main-title">
      <h4>Title</h4>
    <%= f.text_field :title %>
    </div>
    
    <div class="main-body">
      <h4>Body</h4>
    <%= f.text_area :body %>
    </div>
    
    <%= f.submit'Create Book' %>
    
  <% end %>